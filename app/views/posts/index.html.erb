<p style="color: green"><%= notice %></p>

<div class="govuk-grid-row">
  <section class="govuk-grid-column-two-thirds-from-desktop">
    <% @posts.each do |post| %>
      <%= link_to post do %>
        <h2 class="govuk-heading-m"><%= post.title %></h2>
      <% end %>
      <p><%= post.updated_at %></p>
    <% end %>
  </section>
</div>

<%= link_to "New post", new_post_path %>
